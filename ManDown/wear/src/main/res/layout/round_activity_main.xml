<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.mandown.MainActivity"
    tools:deviceIds="wear_round">

    <ImageButton
        android:src="@drawable/wine_small"
        android:id="@+id/Wine"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:adjustViewBounds="false"
        android:cropToPadding="true"
        android:padding="0dp"
        android:elevation="0dp"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:layout_alignTop="@+id/Cocktail"
        android:layout_toEndOf="@+id/Shot"
        android:onClick="drankwine" />

    <ImageButton
        android:src="@drawable/cocktail_glass"
        android:id="@+id/Cocktail"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="drankcocktail" />

    <ImageButton
        android:src="@drawable/beer_glass"
        android:id="@+id/Beer"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/Cocktail"
        android:onClick="drankbeer" />

    <ImageButton
        android:src="@drawable/shot_glass"
        android:id="@+id/Shot"
        android:background="@android:color/transparent"
        android:adjustViewBounds="false"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:cropToPadding="true"
        android:scaleType="fitCenter"
        android:layout_gravity="center"
        android:layout_below="@+id/Wine"
        android:layout_centerHorizontal="true"
        android:onClick="drankshot"/>

    <TextView
        android:id="@+id/acc_reading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_above="@+id/Cocktail"
        android:layout_alignStart="@+id/Beer" />

    <TextView
        android:id="@+id/phonetrigger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nothing to do"
        android:layout_below="@+id/Shot"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
