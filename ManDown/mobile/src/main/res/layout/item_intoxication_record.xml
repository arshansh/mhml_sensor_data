<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/history_item_padding"
            android:paddingTop="@dimen/history_item_padding"
            android:text="Date" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/history_item_padding"
            android:paddingLeft="@dimen/history_item_padding"
            android:text="Time" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvLevel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_gravity="end"
        android:paddingLeft="@dimen/history_item_padding"
        android:paddingRight="@dimen/history_item_padding"
        android:text="Intoxication Level" />

</LinearLayout>