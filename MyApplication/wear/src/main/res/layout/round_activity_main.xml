<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.diyar.myapplication.MainActivity"
    tools:deviceIds="wear_round">

    <ImageButton
        android:src="@drawable/cocktail_glass"
        android:id="@+id/Cocktail"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/Beer"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:src="@drawable/beer_glass"
        android:id="@+id/Wine"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:adjustViewBounds="false"
        android:cropToPadding="true"
        android:padding="0dp"
        android:elevation="0dp"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:layout_alignTop="@+id/Cocktail"
        android:layout_toEndOf="@+id/Shot" />

    <ImageButton
        android:src="@drawable/beer_glass"
        android:id="@+id/Beer"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/Cocktail" />

    <ImageButton
        android:src="@drawable/cocktail_glass"
        android:id="@+id/Shot"
        android:background="@android:color/transparent"
        android:adjustViewBounds="false"
        android:padding="0dp"
        android:elevation="0dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:cropToPadding="true"
        android:scaleType="fitCenter"
        android:layout_below="@+id/Cocktail"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
